generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model VisaType {
  id          String   @id @default(cuid())
  nameRu      String
  nameEn      String
  icon        String   @default("ðŸ“‹")
  duration    String   // "45 Ð´Ð½ÐµÐ¹", "90 Ð´Ð½ÐµÐ¹", etc.
  description String
  price       Int      @default(0)
  priceNote   String?
  isPopular   Boolean  @default(false)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProcessStep {
  id          String   @id @default(cuid())
  number      Int
  titleRu     String
  titleEn     String
  description String
  icon        String   @default("ðŸ“Œ")
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  category  String   @default("general") // general, documents, process, payment
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PricingPackage {
  id          String   @id @default(cuid())
  nameRu      String
  nameEn      String
  description String
  price       Int
  currency    String   @default("USD")
  features    String[] // JSON array of features
  isPopular   Boolean  @default(false)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ContactRequest {
  id        String   @id @default(cuid())
  name      String
  email     String?
  phone     String
  messenger String   // telegram, whatsapp, zalo
  visaType  String
  message   String?
  status    String   @default("new") // new, contacted, completed, cancelled
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SiteSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}

model BlogPost {
  id          String   @id @default(cuid())
  slug        String   @unique
  titleRu     String
  titleEn     String?
  excerptRu   String   // Short description for cards
  excerptEn   String?
  contentRu   String   // Full content (markdown)
  contentEn   String?
  coverImage  String?
  category    String   @default("guides") // guides, news, tips
  tags        String[] // Array of tags
  readTime    Int      @default(5) // Minutes to read
  isPublished Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ==================== RENTAL MODELS ====================

model District {
  id          String      @id @default(cuid())
  nameRu      String
  nameEn      String
  nameVi      String
  description String?
  coverImage  String?
  order       Int         @default(0)
  isActive    Boolean     @default(true)
  apartments  Apartment[]
  createdAt   DateTime    @default(now())
}

model Apartment {
  id            String             @id @default(cuid())
  titleRu       String
  titleEn       String
  titleVi       String
  descriptionRu String             @db.Text
  descriptionEn String             @db.Text
  descriptionVi String             @db.Text
  priceUsd      Int
  priceVnd      Int
  rooms         Int
  area          Float
  floor         Int?
  totalFloors   Int?
  address       String
  lat           Float
  lng           Float
  availableFrom DateTime?
  isAvailable   Boolean            @default(true)
  canShow       Boolean            @default(true)
  hasVideo      Boolean            @default(false)
  views         Int                @default(0)
  districtId    String
  district      District           @relation(fields: [districtId], references: [id])
  images        ApartmentImage[]
  amenities     ApartmentAmenity[]
  requests      ViewingRequest[]
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model ApartmentImage {
  id          String    @id @default(cuid())
  url         String
  order       Int       @default(0)
  isCover     Boolean   @default(false)
  apartmentId String
  apartment   Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
}

model Amenity {
  id         String             @id @default(cuid())
  nameRu     String
  nameEn     String
  nameVi     String
  icon       String
  category   String // general, kitchen, bathroom, building
  apartments ApartmentAmenity[]
}

model ApartmentAmenity {
  apartmentId String
  amenityId   String
  apartment   Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  amenity     Amenity   @relation(fields: [amenityId], references: [id], onDelete: Cascade)

  @@id([apartmentId, amenityId])
}

model ViewingRequest {
  id          String    @id @default(cuid())
  name        String
  phone       String
  messenger   String // whatsapp, telegram, zalo
  type        String // viewing, video_call
  date        DateTime?
  comment     String?
  status      String    @default("new") // new, contacted, completed, cancelled
  apartmentId String
  apartment   Apartment @relation(fields: [apartmentId], references: [id])
  createdAt   DateTime  @default(now())
}

model ApartmentSubscription {
  id          String    @id @default(cuid())
  email       String    @unique
  minPrice    Int?
  maxPrice    Int?
  minRooms    Int?
  maxRooms    Int?
  districtId  String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model NewsletterSubscription {
  id          String    @id @default(cuid())
  email       String    @unique
  topics      String[]  @default(["visa", "news"]) // visa, rent, news, tips
  isActive    Boolean   @default(true)
  confirmedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
